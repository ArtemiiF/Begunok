<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YAssistant.View.CreateBegunokPage"
             Background="Transparent">
    <ContentPage.Content>
        <Grid BackgroundColor="#272537">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0">

                <StackLayout>
                    <Label Text="{Binding ActivitesCount}" FontSize="Large"/>
                </StackLayout>
            </ScrollView>

            <ImageButton Grid.Row="0" Source="AddBegunokActivityButton.png" 
                BackgroundColor="Transparent"
                Scale=".18"
                AnchorX="1.0"
                AnchorY="0.9"
                Margin="20"
                Command="{Binding AddBegunokActivityCommand}" />

            <ImageButton Grid.Row="0" Source="AddBegunokButton.png" 
                BackgroundColor="Transparent"
                Scale=".18"
                AnchorX="1.0"
                AnchorY="1.05"
                Margin="20"
                Command="{Binding StartBegunokCommand}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>